{
    "name": "transcendence",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "serve": "vite preview --port 3000 --host",
        "build": "vite build",
        "test:unit": "vitest",
        "test:e2e": "start-server-and-test preview http://localhost:4173 'cypress run --e2e'",
        "lint": "eslint . --cache --cache-location ./node_modules/.vite/vite-plugin-eslint --no-error-on-unmatched-pattern && prettier . -w -u",
        "lint:style": "stylelint \"./**/*.{css,sass,scss,htm,html,vue}\" --fix --cache-location ./node_modules/.vite/vite-plugin-stylelint && prettier \"./**/*.{css,sass,scss,htm,html,vue}\" -w -u",
        "build-only": "vite build",
        "dev": "vite --port 3000 --host",
        "format": "prettier --write src/",
        "preview": "vite preview --port 3000 --host",
        "test:e2e:dev": "start-server-and-test 'vite dev --port 4173' http://localhost:4173 'cypress open --e2e'",
        "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false"
    },
    "dependencies": {
        "@mdi/font": "7.2.96",
        "pinia": "^2.1.6",
        "roboto-fontface": "*",
        "vue": "^3.3.4",
        "vue-router": "^4.2.4",
        "vuetify": "^3.3.15",
        "webfontloader": "^1.6.28"
    },
    "devDependencies": {
        "@rushstack/eslint-patch": "^1.3.3",
        "@tsconfig/node18": "^18.2.1",
        "@types/jsdom": "^21.1.2",
        "@types/node": "^20.5.9",
        "@types/webfontloader": "^1.6.35",
        "@vitejs/plugin-vue": "^4.3.4",
        "@vitejs/plugin-vue-jsx": "^3.0.2",
        "@vue/eslint-config-prettier": "^8.0.0",
        "@vue/eslint-config-typescript": "^11.0.3",
        "@vue/test-utils": "^2.4.1",
        "@vue/tsconfig": "^0.4.0",
        "cypress": "^13.1.0",
        "eslint": "^8.48.0",
        "eslint-plugin-cypress": "^2.14.0",
        "eslint-plugin-html": "^7.1.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-tsdoc": "^0.2.17",
        "eslint-plugin-vue": "^9.17.0",
        "eslint-plugin-vuejs-accessibility": "^2.2.0",
        "jsdom": "^22.1.0",
        "npm-run-all": "^4.1.5",
        "postcss-html": "^1.5.0",
        "prettier": "^3.0.3",
        "start-server-and-test": "^2.0.0",
        "stylelint": "^15.10.3",
        "stylelint-config-recommended-scss": "^13.0.0",
        "stylelint-config-recommended-vue": "^1.5.0",
        "stylelint-order": "^6.0.3",
        "typescript": "~5.2.2",
        "vite": "^4.4.9",
        "vite-plugin-vuetify": "^1.0.2",
        "vitest": "^0.34.4",
        "vue-cli-plugin-vuetify": "~2.5.8",
        "vue-tsc": "^1.8.10"
    },
    "eslintConfig": {
        "extends": "eslint:recommended"
    },
    "lint-staged": {
        "*.{js,ts,json,yaml,yml,vue,htm,html,md}": "eslint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint",
        "*.{css,sass,scss,vue,htm,html}": "stylelint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-stylelint",
        "*": "prettier -w -u"
    }
}
