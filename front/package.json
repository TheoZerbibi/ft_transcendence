{
	"name": "transcendence",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"build": "vite build --mode production",
		"test:unit": "vitest",
		"test:e2e": "start-server-and-test preview http://localhost:4173 'cypress run --e2e'",
		"lint": "eslint src/ --cache --cache-location ./node_modules/.vite/vite-plugin-eslint --no-error-on-unmatched-pattern && prettier . -w -u",
		"lint:style": "stylelint \"./**/*.{css,sass,scss,htm,html,vue}\" --cache-location ./node_modules/.vite/vite-plugin-stylelint && prettier \"./**/*.{css,sass,scss,htm,html,vue}\" -w -u",
		"build-only": "vite build",
		"start:prod": "vite preview --port ${VITE_PORT} --host",
		"start:dev": "vite --port ${VITE_PORT} --host",
		"format": "prettier --write src/",
		"preview": "vite preview --port ${VITE_PORT} --host",
		"test:e2e:dev": "start-server-and-test 'vite dev --port 4173' http://localhost:4173 'cypress open --e2e'",
		"type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false"
	},
	"dependencies": {
		"@fortawesome/fontawesome-free": "^6.4.2",
		"@mdi/font": "7.3.67",
		"@tsconfig/node18": "^18.2.2",
		"@types/jsdom": "^21.1.3",
		"@types/node": "^20.8.4",
		"@types/webfontloader": "^1.6.35",
		"@vitejs/plugin-vue": "^4.4.0",
		"@vitejs/plugin-vue-jsx": "^3.0.2",
		"@vue/tsconfig": "^0.4.0",
		"gsap": "^3.12.2",
		"p5": "^1.7.0",
		"pinia": "^2.1.6",
		"pnpm": "^8.10.2",
		"roboto-fontface": "*",
		"socket.io-client": "^4.7.2",
		"vite": "^4.4.11",
		"vite-plugin-vuetify": "^1.0.2",
		"volar-service-vetur": "^0.0.14",
		"vue": "^3.3.4",
		"vue-cli-plugin-vuetify": "~2.5.8",
		"vue-router": "^4.2.5",
		"vuetify": "^3.3.21",
		"webfontloader": "^1.6.28"
	},
	"devDependencies": {
		"@rushstack/eslint-patch": "^1.5.1",
		"@vue/eslint-config-prettier": "^8.0.0",
		"@vue/eslint-config-typescript": "^12.0.0",
		"@vue/test-utils": "^2.4.1",
		"cypress": "^13.3.1",
		"eslint": "^8.51.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-cypress": "^2.15.1",
		"eslint-plugin-html": "^7.1.0",
		"eslint-plugin-import": "^2.28.1",
		"eslint-plugin-tsdoc": "^0.2.17",
		"eslint-plugin-vue": "^9.17.0",
		"eslint-plugin-vuejs-accessibility": "^2.2.0",
		"jsdom": "^22.1.0",
		"npm-run-all": "^4.1.5",
		"postcss-html": "^1.5.0",
		"prettier": "^3.0.3",
		"start-server-and-test": "^2.0.1",
		"stylelint": "^15.10.3",
		"stylelint-config-recommended-scss": "^13.0.0",
		"stylelint-config-recommended-vue": "^1.5.0",
		"stylelint-order": "^6.0.3",
		"typescript": "~5.2.2",
		"vitest": "^0.34.6",
		"vue-tsc": "^1.8.19"
	},
	"eslintConfig": {
		"extends": "eslint:recommended"
	},
	"lint-staged": {
		"*.{js,ts,json,yaml,yml,vue,htm,html,md}": "eslint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint",
		"*.{css,sass,scss,vue,htm,html}": "stylelint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-stylelint",
		"*": "prettier -w -u"
	}
}
