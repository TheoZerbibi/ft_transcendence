model Game {
	id			Int	@id @default(autoincrement()) @unique
	uid			String	@unique
	createdAt	DateTime @default(now())
	startedAt	DateTime?
	endAt		DateTime?
	gamePlayer 	GamePlayer[]

	@@map("games")
}

model GamePlayer {
	playerId	Int
	gameId		Int
	isWin		Boolean?
	isSpec		Boolean?
	player		User	@relation(fields: [playerId], references: [id])
	game		Game	@relation(fields: [gameId], references: [id])

	@@id([playerId, gameId])
	@@map("gamePlayers")
}
